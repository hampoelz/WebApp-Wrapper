{
  "name": "capacitor-app",
  "version": "1.0.0",
  "description": "An Amazing Capacitor App",
  "scripts": {
    "build": "npm run wrapper:build && npm run nodejs:build",
    "postinstall": "npm run wrapper:install && npm run nodejs:install",
    "wrapper:install": "cd pwa-wrapper && npm install",
    "wrapper:build": "cd pwa-wrapper && npm run build",
    "nodejs:install": "cd nodejs && npm install",
    "nodejs:build": "cd nodejs && npm run build"
  },
  "dependencies": {
    "@capacitor-community/electron": "^4.1.2",
    "@capacitor/android": "^5.3.0",
    "@capacitor/core": "latest",
    "@capacitor/ios": "^5.3.0",
    "@capacitor/splash-screen": "latest",
    "capacitor-browserview": "https://github.com/hampoelz/capacitor-browserview/releases/download/v1.0.0-beta.3/capacitor-browserview.tgz",
    "capacitor-nodejs": "https://github.com/hampoelz/capacitor-nodejs/releases/download/v1.0.0-beta.5/capacitor-nodejs.tgz"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.3.0",
    "@tsconfig/strictest": "^2.0.1",
    "typescript": "^5.2.2"
  }
}
